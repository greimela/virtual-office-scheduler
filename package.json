{
    "name": "virtual-office-schedule-updater",
    "version": "1.0.0",
    "description": "Update the sessions displayed in an virtual office instance from a predefined schedule",
    "license": "Apache-2.0",
    "scripts": {
        "build": "tsc",
        "clean": "shx rm -rf ./build",
        "start:scheduleSessions": "npx ts-node src/schedule/session.ts",
        "start:createMeetings": "npx ts-node src/createMeetings/meeting.ts",
        "dev": "ts-node-dev --inspect --respawn ./src/schedule/session.ts",
        "format": "prettier --ignore-path .gitignore --write '**/*.{ts,js}' && eslint --fix .",
        "test": "run-s test:unit test:lint",
        "test:lint": "eslint .",
        "test:unit": "jest",
        "test:watch": "jest --watch"
    },
    "dependencies": {
        "@slack/web-api": "^5.15.0",
        "axios": "^0.21.1",
        "chalk": "^4.1.1",
        "dotenv": "^8.6.0",
        "fp-ts": "^2.10.5",
        "io-ts": "^2.2.16",
        "lodash": "^4.17.21",
        "luxon": "^2.5.2",
        "pino": "^6.11.3",
        "pino-pretty": "^4.8.0",
        "readline": "^1.3.0"
    },
    "devDependencies": {
        "@sinonjs/fake-timers": "^6.0.1",
        "@types/axios": "^0.14.0",
        "@types/dotenv": "^8.2.0",
        "@types/jest": "^25.2.1",
        "@types/lodash": "^4.14.169",
        "@types/luxon": "^1.26.5",
        "@types/node": "^13.13.52",
        "@types/node-fetch": "^2.5.10",
        "@types/pino": "^6.3.8",
        "@types/sinonjs__fake-timers": "^6.0.2",
        "@types/uuid": "^8.3.0",
        "@typescript-eslint/eslint-plugin": "^2.26.0",
        "@typescript-eslint/parser": "^2.26.0",
        "eslint": "^7.26.0",
        "eslint-config-prettier": "^6.15.0",
        "eslint-config-standard": "^14.1.0",
        "eslint-plugin-import": "^2.23.2",
        "eslint-plugin-jest": "^23.20.0",
        "eslint-plugin-node": "^11.0.0",
        "eslint-plugin-prettier": "^3.4.0",
        "eslint-plugin-promise": "^4.3.1",
        "eslint-plugin-standard": "^4.1.0",
        "google-spreadsheet": "^3.1.15",
        "husky": "^4.3.8",
        "jest": "^25.5.1",
        "nodemon": "^2.0.7",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.3.0",
        "shx": "^0.3.3",
        "ts-jest": "^25.4.0",
        "ts-node": "^8.10.2",
        "ts-node-dev": "^1.1.6",
        "typescript": "^3.9.9"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run test && npm run build"
        }
    }
}
